generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role{
  USER
  ADMIN
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  password String
  isEmailVerified Boolean @default(false)
  createdAt DateTime @default(now())
  lastLoginAt DateTime?
  role Role @default(USER)
  verificationToken String?
}

model Service{
  id Int @id @default(autoincrement())
  name String @unique
  duration Int
  appointments Appointment[]
}

model Appointment{
  id Int @id @default(autoincrement())
  customerName String
  email String?
  startTime DateTime
  endTime DateTime
  serviceId Int
  service Service @relation(fields:[serviceId],references:[id])
  @@unique([serviceId,startTime]) // preventing two appointments at same starttime
}